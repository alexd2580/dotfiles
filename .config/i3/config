### Additional modes

mode "Display-xRandR" {
    bindsym $mod+s exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip same
    bindsym $mod+o exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip off
    bindsym $mod+a exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip auto
    bindsym $mod+r exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip right
    bindsym $mod+l exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip left
    bindsym $mod+u exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip top
    bindsym $mod+d exec --no-startup-id /home/sascha/.utils/xrandrUtil/xrandrFlip bottom
    bindsym $mod+b exec --no-startup-id feh --bg-fill /home/sascha/.config/i3/background.jpg

    bindsym XF86Display mode "default"
    bindsym Escape mode "default"
}

exec --no-startup-id feh --bg-fill /home/sascha/.config/i3/background.jpg

bindsym XF86Display mode "Display-xRandR"

mode "UnMod" {
    bindsym $mod+q mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode "UnMod"

### Tool keysyms

# AUDIO
#exec --no-startup-id pulseaudio --start
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 4%+ && killall -SIGUSR1 statorange
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 4%- && killall -SIGUSR1 statorange
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle && killall -SIGUSR1 statorange

# BRIGHTNESS -> xbacklight required
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5% -time 1
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5% -time 1

# TRANSLATOR
bindsym $mod+space exec --no-startup-id /home/sascha/.utils/translit/translateAll.sh
bindsym $mod+del exec --no-startup-id /home/sascha/.utils/translit/translateSelection.sh

# TRAYER
bindsym $mod+t exec /home/sascha/.utils/statorange/toggle_trayer.sh

